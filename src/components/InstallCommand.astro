---
// Installation command component for homepage
---

<div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
  <div class="install-command-container relative rounded-full bg-indigo-50 px-6 py-3 flex items-center">
    <code class="text-purple-800 font-mono">pip install lirixai</code>
    <button 
      class="copy-button ml-3 p-1.5 text-gray-500 hover:text-indigo-600 transition-colors"
      aria-label="Copy to clipboard"
      title="Copy to clipboard">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
    </button>
  </div>
  
  <a href="/documentation/getting-started" class="documentation-button bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-full flex items-center justify-center transition-colors">
    <span>Documentation</span>
    <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
    </svg>
  </a>
</div>

<script>
  // Copy to clipboard functionality
  const copyButton = document.querySelector('.copy-button');
  const commandText = document.querySelector('.install-command-container code').textContent;
  
  copyButton.addEventListener('click', () => {
    navigator.clipboard.writeText(commandText).then(() => {
      // Visual feedback
      copyButton.classList.add('text-green-500');
      setTimeout(() => {
        copyButton.classList.remove('text-green-500');
      }, 1000);
    });
  });
</script>

<style>
  .install-command-container {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    transition: all 0.2s ease;
  }
  
  .install-command-container:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .documentation-button {
    box-shadow: 0 2px 5px rgba(79, 70, 229, 0.3);
  }
  
  .documentation-button:hover {
    box-shadow: 0 4px 8px rgba(79, 70, 229, 0.4);
  }
</style> 