import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Backend Integrations",
    description: "Pre-configured connections to Supabase, Web Search APIs, and real-time protocols",
    icon: "bx:code-curly"
  },
  {
    title: "Memory Management",
    description: "Automated database handling with embedded storage solutions",
    icon: "bx:data"
  },
  {
    title: "Multi-Agent Systems",
    description: "Out-of-the-box tools for collaborative AI agent networks",
    icon: "bx:network-chart"
  },
  {
    title: "Web Search API",
    description: "Integrated search capabilities for AI agent knowledge retrieval",
    icon: "bx:search-alt"
  },
  {
