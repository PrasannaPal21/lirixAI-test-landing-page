---
import { Icon } from "astro-icon/components";
---

<div class="relative overflow-hidden py-10">
  <!-- Animated background elements -->
  <div class="absolute inset-0 z-0 opacity-30">
    <div class="code-particle"></div>
    <div class="code-particle"></div>
    <div class="code-particle"></div>
    <div class="floating-icon" style="--delay: 0s; --x: 15%; --y: 20%;">
      <Icon name="bx:code-curly" class="w-10 h-10 text-blue-500" />
    </div>
    <div class="floating-icon" style="--delay: 2s; --x: 75%; --y: 30%;">
      <Icon name="bx:data" class="w-8 h-8 text-purple-500" />
    </div>
    <div class="floating-icon" style="--delay: 1s; --x: 25%; --y: 70%;">
      <Icon name="bx:network-chart" class="w-12 h-12 text-green-500" />
    </div>
    <div class="floating-icon" style="--delay: 3s; --x: 80%; --y: 65%;">
      <Icon name="bx:search-alt" class="w-9 h-9 text-orange-500" />
    </div>
  </div>

  <!-- Animated code block -->
  <div class="relative z-10 max-w-2xl mx-auto mt-16 mb-8 transform transition-all duration-700 hover:scale-105">
    <div class="bg-gray-900 rounded-lg shadow-xl overflow-hidden">
      <div class="flex items-center px-4 py-2 bg-gray-800">
        <div class="flex space-x-2">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <div class="ml-4 text-gray-400 text-sm">lirixai_demo.py</div>
      </div>
      <div class="px-4 py-4 text-left">
        <pre class="text-sm text-gray-300 typing-animation"><span class="text-purple-400">from</span> <span class="text-blue-400">lirixai</span> <span class="text-purple-400">import</span> Agent, Memory, WebSearch

<span class="text-green-400"># Initialize an AI agent with memory and search capabilities</span>
agent = Agent(
    name=<span class="text-yellow-300">"research_assistant"</span>,
    memory=Memory(database_url=<span class="text-yellow-300">"supabase://memory"</span>),
    tools=[WebSearch()]
)

<span class="text-green-400"># Run the agent with a task</span>
result = agent.run(<span class="text-yellow-300">"Find the latest research on multi-agent systems"</span>)
<span class="text-blue-400">print</span>(result.summary)</pre>
      </div>
    </div>
  </div>

  <!-- Animated connection lines -->
  <div class="connection-lines"></div>
</div>

<style>
  .code-particle {
    position: absolute;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.2) 0%, rgba(59, 130, 246, 0) 70%);
    border-radius: 50%;
    animation: float 15s infinite ease-in-out;
  }

  .code-particle:nth-child(1) {
    top: 10%;
    left: 20%;
    animation-delay: 0s;
  }

  .code-particle:nth-child(2) {
    top: 50%;
    right: 10%;
    width: 200px;
    height: 200px;
    animation-delay: 5s;
  }

  .code-particle:nth-child(3) {
    bottom: 10%;
    left: 30%;
    width: 250px;
    height: 250px;
    animation-delay: 2s;
  }

  .floating-icon {
    position: absolute;
    top: var(--y);
    left: var(--x);
    animation: float 10s infinite ease-in-out;
    animation-delay: var(--delay);
    filter: drop-shadow(0 0 8px rgba(0, 0, 0, 0.2));
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  .typing-animation {
    overflow: hidden;
    border-right: 2px solid #3b82f6;
    white-space: nowrap;
    animation: typing 4s steps(60) 1s 1 normal both, blink 1s steps(1) infinite;
    width: 100%;
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes blink {
    50% {
      border-color: transparent;
    }
  }

  .connection-lines {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.1) 0%, transparent 8%),
      radial-gradient(circle at 75% 40%, rgba(139, 92, 246, 0.1) 0%, transparent 8%),
      radial-gradient(circle at 40% 80%, rgba(16, 185, 129, 0.1) 0%, transparent 8%);
    opacity: 0.7;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-icon {
      display: none;
    }
  }
</style> 